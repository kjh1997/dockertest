apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: flask-server
spec:
  replicas: 3
  serviceName: sts-svc-domain #statefulset need it
  selector:
    matchLabels:
      app: flask-server
  template:
    metadata:
      labels:
        app: flask-server
    spec:
      containers:
      - name: flask-server
        image: aam411/mydocker:1.04
---
apiVersion: v1
kind: Service
metadata:
  name: flask-svc
spec:
  selector:
    app: flask-server
  ports:
    - port: 80
  clusterIP: None
